<script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.7.0/underscore-min.js"></script>
<script>
  if (location.hash.match(/thanks/)) {
    var thanksEl = document.createElement("div");
    thanksEl.className = "contact-thanks";
    thanksEl.innerHTML = "Thanks! Your message should show up in my inbox shortly, so I'll get back to you as soon as I can.";

    document.getElementById('thanks-target').appendChild(thanksEl);
  }

  var contactButton = document.getElementById('contact-submit')
  contactButton.onclick = function() {
    var _this = this;

    var getLabel = function(input) {
      return _.findWhere(document.getElementsByTagName('label'), { htmlFor: input.id });
    };

    var isValid = _.chain(["contact_name", "contact_email", "contact_body"])
      .map(function(id) {
        var el = document.getElementById(id);
        var label = getLabel(el);
        el.className = "";
        label.className = "";

        if (_.isEmpty(el.value)) {
          el.className = "missing";
          label.className = "missing";
          return false;
        }
        return true;
      })
      .every(_.identity)
      .value();

    if (!isValid) {
      return false;
    };

    setTimeout(function() {
      _this.disabled = "disabled";
    }, 0);
  };
</script>
